{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for Shell IDE",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "core:window:allow-create",
    "core:window:allow-close",
    "core:window:allow-set-title",
    "core:window:allow-set-size",
    "core:window:allow-center",
    "core:webview:allow-create-webview-window",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "shell:allow-open",
    "shell:allow-execute",
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "deep-link:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-create",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    {
      "identifier": "fs:scope",
      "allow": ["$HOME/**", "$DOCUMENT/**", "$DESKTOP/**", "$DOWNLOAD/**", "**"]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "git", "cmd": "git", "args": true },
        { "name": "node", "cmd": "node", "args": true },
        { "name": "npm", "cmd": "npm", "args": true },
        { "name": "npx", "cmd": "npx", "args": true },
        { "name": "python", "cmd": "python", "args": true },
        { "name": "python3", "cmd": "python3", "args": true },
        { "name": "exec-sh", "cmd": "sh", "args": true },
        { "name": "exec-zsh", "cmd": "zsh", "args": true },
        { "name": "exec-bash", "cmd": "bash", "args": true },
        { "name": "ls", "cmd": "ls", "args": true },
        { "name": "cat", "cmd": "cat", "args": true },
        { "name": "echo", "cmd": "echo", "args": true },
        { "name": "cd", "cmd": "cd", "args": true },
        { "name": "pwd", "cmd": "pwd", "args": true },
        { "name": "mkdir", "cmd": "mkdir", "args": true },
        { "name": "rm", "cmd": "rm", "args": true },
        { "name": "mv", "cmd": "mv", "args": true },
        { "name": "cp", "cmd": "cp", "args": true },
        { "name": "cargo", "cmd": "cargo", "args": true },
        { "name": "rustc", "cmd": "rustc", "args": true },
        { "name": "javac", "cmd": "javac", "args": true },
        { "name": "java", "cmd": "java", "args": true },
        { "name": "gcc", "cmd": "gcc", "args": true },
        { "name": "g++", "cmd": "g++", "args": true },
        { "name": "make", "cmd": "make", "args": true }
      ]
    }
  ]
}
